# Record HOME variable
setenv myhome ${HOME}

# Create working window with home and histfile changed
setenv HISTFILE ${HOME}/.bash_working_history
setenv HOME ${myhome}/working
chdir ${HOME}
screen -t working 0
setenv HOME ${myhome}

# Create general window with histfile changed
chdir
setenv HISTFILE ${HOME}/.bash_general_history
screen -t general 1

# Create general window with histfile changed
setenv HISTFILE ${HOME}/.bash_sys_history
screen -t sys 2

# Create general window with histfile changed
setenv HISTFILE ${HOME}/.bash_ref_history
screen -t ref 3

# Create publish window with home and histfile changed
setenv HISTFILE ${HOME}/.bash_publish_history
setenv HOME ${myhome}/publish
chdir ${HOME}
screen -t publish 4
setenv HOME ${myhome}


# Restore HOME variable
setenv HOME ${myhome}
unsetenv myhome

chdir
select 1

