#!/bin/bash

# Start with a fresh session file
sessionfile=${HOME}/session/updatesession
> $sessionfile

# SSH env vars
ssh-agent -s >> $sessionfile
# DBUS env vars
dbus-launch --sh-syntax >> $sessionfile

# Other vars

vars="DISPLAY SESSION_MANAGER GPG_AGENT_INFO GNOME_KEYRING_CONTROL GNOME_KEYRING_PID"

for x in ${vars} ; do
    (eval echo $x=\$$x) | sed  's/=/="/
                                s/$/"/
                                s/^/export /'
done >>$sessionfile

